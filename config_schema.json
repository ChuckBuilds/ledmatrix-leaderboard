{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Leaderboard Plugin Configuration",
  "description": "Configuration schema for the Sports Leaderboard plugin",
  "type": "object",
  "properties": {
    "enabled": {
      "type": "boolean",
      "default": false,
      "description": "Enable or disable the leaderboard plugin"
    },
    "global": {
      "type": "object",
      "properties": {
        "display_duration": {
          "type": "number",
          "default": 30,
          "minimum": 10,
          "maximum": 300,
          "description": "Duration in seconds to display the leaderboard"
        },
        "update_interval": {
          "type": "integer",
          "default": 3600,
          "minimum": 300,
          "maximum": 86400,
          "description": "How often to fetch new leaderboard data (seconds)"
        },
        "scroll_speed": {
          "type": "number",
          "default": 1,
          "minimum": 0.1,
          "maximum": 10,
          "description": "Scrolling speed multiplier"
        },
        "target_fps": {
          "type": "integer",
          "default": 100,
          "minimum": 30,
          "maximum": 200,
          "description": "Target frames per second for scrolling"
        },
        "scroll_speed_scale": {
          "type": "number",
          "default": 8,
          "minimum": 1,
          "maximum": 20,
          "description": "Scroll speed scale factor"
        },
        "request_timeout": {
          "type": "integer",
          "default": 30,
          "minimum": 5,
          "maximum": 120,
          "description": "Request timeout in seconds"
        },
        "dynamic_duration": {
          "type": "boolean",
          "default": true,
          "description": "Enable dynamic duration based on content width"
        },
        "min_duration": {
          "type": "integer",
          "default": 45,
          "minimum": 10,
          "maximum": 300,
          "description": "Minimum display duration when dynamic duration is enabled"
        },
        "max_duration": {
          "type": "integer",
          "default": 600,
          "minimum": 30,
          "maximum": 1200,
          "description": "Maximum display duration when dynamic duration is enabled"
        },
        "duration_buffer": {
          "type": "number",
          "default": 0.1,
          "minimum": 0.01,
          "maximum": 1.0,
          "description": "Duration buffer for dynamic duration calculation"
        },
        "max_display_time": {
          "type": "integer",
          "default": 600,
          "minimum": 60,
          "maximum": 1800,
          "description": "Maximum display time in seconds"
        },
        "scroll_pixels_per_second": {
          "type": "number",
          "default": 15.0,
          "minimum": 5.0,
          "maximum": 50.0,
          "description": "Scroll speed in pixels per second"
        },
        "scroll_target_fps": {
          "type": "number",
          "default": 100.0,
          "minimum": 30.0,
          "maximum": 200.0,
          "description": "Target FPS for scrolling"
        },
        "scroll_mode": {
          "type": "string",
          "enum": ["one_shot", "continuous"],
          "default": "one_shot",
          "description": "Scrolling mode"
        },
        "scroll_direction": {
          "type": "string",
          "enum": ["left", "right"],
          "default": "left",
          "description": "Scroll direction"
        },
        "enable_scroll_metrics": {
          "type": "boolean",
          "default": false,
          "description": "Enable scroll performance metrics"
        },
        "scroll_delay": {
          "type": "number",
          "default": 0.01,
          "minimum": 0.001,
          "maximum": 0.1,
          "description": "Delay between scroll steps in seconds"
        },
        "loop": {
          "type": "boolean",
          "default": false,
          "description": "Continuously loop the leaderboard"
        }
      },
      "additionalProperties": false
    },
    "enabled_sports": {
      "type": "object",
      "properties": {
        "nfl": {
          "type": "object",
          "properties": {
            "enabled": {
              "type": "boolean",
              "default": true,
              "description": "Enable NFL standings"
            },
            "top_teams": {
              "type": "integer",
              "default": 10,
              "minimum": 5,
              "maximum": 32,
              "description": "Number of top NFL teams to display"
            }
          },
          "additionalProperties": false
        },
        "nba": {
          "type": "object",
          "properties": {
            "enabled": {
              "type": "boolean",
              "default": false,
              "description": "Enable NBA standings"
            },
            "top_teams": {
              "type": "integer",
              "default": 10,
              "minimum": 5,
              "maximum": 30,
              "description": "Number of top NBA teams to display"
            }
          },
          "additionalProperties": false
        },
        "mlb": {
          "type": "object",
          "properties": {
            "enabled": {
              "type": "boolean",
              "default": false,
              "description": "Enable MLB standings"
            },
            "top_teams": {
              "type": "integer",
              "default": 10,
              "minimum": 5,
              "maximum": 30,
              "description": "Number of top MLB teams to display"
            }
          },
          "additionalProperties": false
        },
        "ncaa_fb": {
          "type": "object",
          "properties": {
            "enabled": {
              "type": "boolean",
              "default": true,
              "description": "Enable NCAA Football rankings"
            },
            "top_teams": {
              "type": "integer",
              "default": 25,
              "minimum": 5,
              "maximum": 130,
              "description": "Number of top NCAA Football teams to display"
            },
            "show_ranking": {
              "type": "boolean",
              "default": true,
              "description": "Show NCAA Football rankings instead of standings"
            }
          },
          "additionalProperties": false
        },
        "nhl": {
          "type": "object",
          "properties": {
            "enabled": {
              "type": "boolean",
              "default": false,
              "description": "Enable NHL standings"
            },
            "top_teams": {
              "type": "integer",
              "default": 10,
              "minimum": 5,
              "maximum": 32,
              "description": "Number of top NHL teams to display"
            }
          },
          "additionalProperties": false
        },
        "ncaam_basketball": {
          "type": "object",
          "properties": {
            "enabled": {
              "type": "boolean",
              "default": false,
              "description": "Enable NCAA Men's Basketball rankings"
            },
            "top_teams": {
              "type": "integer",
              "default": 25,
              "minimum": 5,
              "maximum": 350,
              "description": "Number of top NCAA Men's Basketball teams to display"
            }
          },
          "additionalProperties": false
        },
        "ncaam_hockey": {
          "type": "object",
          "properties": {
            "enabled": {
              "type": "boolean",
              "default": true,
              "description": "Enable NCAA Men's Hockey rankings"
            },
            "top_teams": {
              "type": "integer",
              "default": 10,
              "minimum": 5,
              "maximum": 60,
              "description": "Number of top NCAA Men's Hockey teams to display"
            },
            "show_ranking": {
              "type": "boolean",
              "default": true,
              "description": "Show NCAA Men's Hockey rankings instead of standings"
            }
          },
          "additionalProperties": false
        }
      },
      "additionalProperties": false
    }
  },
  "additionalProperties": false,
  "required": ["enabled"]
}
